+    private boolean checkLobotomized() {
+        int interval = this.level().purpurConfig.villagerLobotomizeCheckInterval;
+        boolean shouldCheckForTradeLocked = this.level().purpurConfig.villagerLobotomizeWaitUntilTradeLocked;
+        if (this.notLobotomizedCount > 3) {
+            // check half as often if not lobotomized for the last 3+ consecutive checks
+            interval *= 2;
+        }
+        if (this.level().getGameTime() % interval == 0) {
+            // offset Y for short blocks like dirt_path/farmland
+            boolean canTravel = getBlockPosToCheck().stream().anyMatch(this::canTravelFrom);
+            this.isLobotomized = !(shouldCheckForTradeLocked && this.getVillagerXp() == 0) && !canTravel;
+
+            if (this.isLobotomized) {
+                this.notLobotomizedCount = 0;
+            } else {
+                this.notLobotomizedCount++;
+            }
+        }
+        return this.isLobotomized;
+    }
+
+    private Set<BlockPos> getBlockPosToCheck() {
+        BlockPos feet = this.blockPosition();
+        BlockState state = this.level().getBlockStateIfLoaded(feet);
+        if (state == null) return Set.of(feet);
+        Block block = state.getBlock();
+        double yOffset = 0;
+        if (block instanceof FarmBlock || block instanceof DirtPathBlock) {
+            yOffset = 0.0625;
+        } else if (block instanceof MudBlock || block instanceof SoulSandBlock || block instanceof LecternBlock || block instanceof GrindstoneBlock) {
+            yOffset = 0.125;
+        } else if ((block instanceof BedBlock && !isSleeping()) || block instanceof StonecutterBlock) {
+            yOffset = 0.5625;
+        } else if (block instanceof BedBlock && isSleeping()) {
+            return Set.of(
+                BlockPos.containing(this.position().x, this.getBoundingBox().minY, this.position().z),
+                BlockPos.containing(this.position().x, this.getBoundingBox().minY + 0.5625, this.position().z)
+            );
+        }
+        return Set.of(BlockPos.containing(this.position().x, this.getBoundingBox().minY + yOffset, this.position().z));
+    }
+
+
+    private boolean canTravelFrom(BlockPos pos) {
+        return canTravelTo(pos.east()) || canTravelTo(pos.west()) || canTravelTo(pos.north()) || canTravelTo(pos.south());
+    }
+
+    private boolean canTravelTo(BlockPos pos) {
+        net.minecraft.world.level.block.state.BlockState state = this.level().getBlockStateIfLoaded(pos);
+        if (state == null) {
+            // chunk not loaded
+            return false;
+        }
+        net.minecraft.world.level.block.Block bottom = state.getBlock();
+        if (bottom instanceof net.minecraft.world.level.block.FenceBlock ||
+                bottom instanceof net.minecraft.world.level.block.FenceGateBlock ||
+                bottom instanceof net.minecraft.world.level.block.WallBlock) {
+            // bottom block is too tall to get over
+            return false;
+        }
+        net.minecraft.world.level.block.Block top = level().getBlockState(pos.above()).getBlock();
+        // only if both blocks have no collision
+        return !bottom.hasCollision && !top.hasCollision;
+    }
